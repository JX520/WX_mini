/* pages/detile/detile.wxss */
page{
  width: 100%;
  height: 100%;
}
.detile{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}
.detile-edit{
  flex: 1;
  background-color: whitesmoke;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.detile-edit-canvas{
  width: 100%;
  height: 100%;
}
.detile-bottom{
  flex: 0 0 150rpx;
  height: 150rpx;
  margin: 5px 0px;
  
}
.swiper-img{
  width: 95%;
  height: 95%;
  cursor: pointer;
  border: 2px solid white;
}
.swiper-img image{
  width: 100%;
  height: 100%;
  border-radius: 5px;
  
  
}
.swiper-img-active{
  border: 2px solid red;
  opacity: 0.7;
}

.detile-btn button{
  text-align: center;
  flex: 0 0 90rpx;
  background-color: rgb(79, 207, 224);
  color: white;
  font-family: Arial, Helvetica, sans-serif;
  
}